---
layout: base.njk
---

<header class="border-bottom mb-3">
    <h1>Posts Tagged: {{ tagName }} ({{ collections[tagName] | length }})</h1>
</header>
  
{% for post in collections[tagName] %}
  <article class="mb-4 border-bottom pb-3">
    <h2>
      <a href="{{ post.url }}" class="text-decoration-none text-dark">{{ post.data.title }}</a>
    </h2>
    <p class="text-muted">
      <time datetime="{{ post.date | formatDate('yyyy-LL-dd') }}">{{ post.date | formatDate('dd LLL yyyy') }}</time> • {{ post.templateContent | readingTime }} minutes
    </p>
    <p>{{ post.templateContent | removeStylesScripts | striptags | truncate(250, '...') }}</p>
    <a href="{{ post.url }}" class="text-decoration-none">Read More →</a>
  </article>
{% endfor %}
